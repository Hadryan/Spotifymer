<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_attribute_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/search_result_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/image"
            android:layout_margin="5dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/search_type_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/colorOnPrimary"/>

            <TextView
                android:id="@+id/search_title_text"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textColor="@color/colorOnPrimary"/>
        </LinearLayout>

        <Button
            android:id="@+id/search_remove_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_medium"
            app:cornerRadius="15dp"
            android:drawableTop="@drawable/baseline_clear_white_18dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>